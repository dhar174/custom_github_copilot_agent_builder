{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmitOnError": true
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}